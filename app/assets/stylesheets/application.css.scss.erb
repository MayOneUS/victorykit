@mixin progressbar($fluid, $fluid_highlight) {
  height: 20px;
  margin: 5px 0px 10px;
  border-radius: 11px;
  -moz-box-shadow: inset 0 0 5px #ddd;
  -webkit-box-shadow: inset 0 0 5px #ddd;
  box-shadow: inset 0 0 5px #ddd;
  background: #fefefe;
  border: 1px solid #ddd;
  .fluid {
    background: #{$fluid}; /* Old browsers */
    background: -moz-linear-gradient(1deg,  $fluid 0%, $fluid_highlight 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left bottom, right top, color-stop(0%,$fluid), color-stop(100%,$fluid_highlight)); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(1deg,  $fluid 0%,$fluid_highlight 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(1deg,  $fluid 0%,$fluid_highlight 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(1deg,  $fluid 0%,$fluid_highlight 100%); /* IE10+ */
    background: linear-gradient(1deg,  $fluid 0%,$fluid_highlight 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#{$fluid_highlight}', endColorstr='#{$fluid}',GradientType=0 ); /* IE6-8 fallback on horizontal gradient */
    width: 33%;
    height: 98%;
    border: 1px solid #{$fluid};
    -moz-box-shadow: inset 3px -4px 4px 1px $fluid;
    -webkit-box-shadow: inset 3px -4px 4px 1px $fluid;
    box-shadow: inset 3px -4px 4px 1px $fluid;
    border-radius: 11px;
  }
}
.progressbar {
  @include progressbar(#8B1A1A, #CC1100);
}
.progressbar.red {
  @include progressbar(#8B1A1A, #CC1100);
}
.progressbar.blue {
