@mixin button($color0, $color1, $color2, $color3) {
  color: white;
  text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
  background-color: $color0;
  background-image: -moz-linear-gradient(top, $color1, $color2);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from($color1), to($color2));
  background-image: -webkit-linear-gradient(top, $color1, $color2);
  background-image: -o-linear-gradient(top, $color1, $color2);
  background-image: linear-gradient(to bottom, $color1, $color2);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0088cc', endColorstr='#ff0044cc', GradientType=0);
  border-color: $color2 $color2 $color3;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) fadein(rgba(0, 0, 0, 0.1), 15%);
  filter: progid:DXImageTransform.Microsoft.gradient(enabled = false);
  &:hover, &:active, &.active, &:disabled, &.disabled {
    background-color: $color3;
    background-image: linear-gradient(to bottom, $color0, $color3);
    background-repeat: repeat-x;
  }
}

.btn-primary {
  @include button(#b31717, #cc1100, #8B1A1A, #721919);
}
.btn-primary.red {
